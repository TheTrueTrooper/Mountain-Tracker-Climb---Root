
@{
    ViewBag.Title = "Partners";
}
<script src="~/Scripts/AngularJSAccount.js"></script>
<div ng-app="NGAccount" ng-controller="AccountPartnersController">
    <h2>Partners</h2>
    <input type="hidden" class="input-lg" ng-init="Init(@Session[Mountain_Tracker_Climb___API.App_Start.StaticVars.UserID])">
    <h3>Partner Requests</h3>
    <div>
        <div ng-repeat="Friend in FriendData.FriendRequests">
            <div class="media-left">
                <a href="{{Friend.URL}}" style="text-decoration:none;color:inherit;">
                    <img ng-src="{{Friend.ProfilePicture}}" class="img-rounded media-object" style="width:100px;height:100px;border-radius:50%;border:inset">
                </a>
            </div>
            <div class="media-body">
                <a href="{{Friend.URL}}" style="text-decoration:none;color:inherit;">
                    <h4 class="media-heading">{{Friend.UserName}}</h4>
                </a>
                <div class="row">
                    <div class="col-lg-6">
                        <input ng-click="AcceptFriendRequest(Friend.ID,ID)" class="btn btn-default" type="button" value="Accept Partner Request">
                    </div>
                    <div class="col-lg-6">
                        <input class="btn btn-default" type="button" value="Decline Partner Request" ng-click="Remove(Friend.ID,ID)">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <h3>Partners Requested</h3>
    <div>
        <div ng-repeat="Friend in FriendData.FriendRequesteds">
            <div class="media-left">
                <a href="{{Friend.URL}}" style="text-decoration:none;color:inherit;">
                    <img ng-src="{{Friend.ProfilePicture}}" class="img-rounded media-object" style="width:100px;height:100px;border-radius:50%;border:inset">
                </a>
            </div>
            <div class="media-body">
                <a href="{{Friend.URL}}" style="text-decoration:none;color:inherit;">
                    <h2 class="media-heading">{{Friend.UserName}}</h2>
                </a>
                <input class="btn btn-default" type="button" value="Remove Partner Request" ng-click="Remove(Friend.ID,ID)">
            </div>
        </div>
    </div>
    <h3>Partners</h3>
    <div>
        <div ng-repeat="Friend in FriendData.Friends">
            <div class="media-left">
                <a href="{{Friend.URL}}" style="text-decoration:none;color:inherit;">
                    <img ng-src="{{Friend.ProfilePicture}}" class="img-rounded media-object" style="width:150px;height:150px;border-radius:50%;border:inset">
                </a>
            </div>
            <div class="media-body">
                <a href="{{Friend.URL}}" style="text-decoration:none;color:inherit;">
                    <h4 class="media-heading">{{Friend.UserName}}</h4>
                    <p>Users Name: {{Friend.FirstName}} {{Friend.MiddleName}} {{Friend.LastName}}</p>
                </a>
                <input class="btn btn-default" type="button" value="Remove Climbing Partner" ng-click="Remove(Friend.ID,ID)">
            </div>
        </div>
    </div>
</div>

